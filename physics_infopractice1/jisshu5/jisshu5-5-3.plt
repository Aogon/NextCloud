if(exist("n")==0 || n<0) n = n0  # ループ変数の初期化

#-------------------------------------------------------------------------------
# プロット
#-------------------------------------------------------------------------------
unset label
set label sprintf("t = %d", n) at screen 0.05,0.9
plot "jisshu5-5-3.data"  index n using 2:3 w p pt 9  # n番目のデータのプロット


#-------------------------------------------------------------------------------
# ループ処理
#-------------------------------------------------------------------------------
n = n + dn            # ループ変数の増加
if ( n < n1 ) reread  # ループの評価
undefine n            # ループ変数の削除